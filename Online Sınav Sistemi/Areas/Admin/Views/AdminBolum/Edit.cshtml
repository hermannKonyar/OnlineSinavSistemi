@{
    Layout = null;
}


@using (Html.BeginForm("Edit", "AdminBolum", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="blue bigger">Bolum Güncelleme İşlemi</h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.BolumID)

            <div class="form-group">
                @Html.LabelFor(model => model.BolumAdi, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BolumAdi)
                    @Html.ValidationMessageFor(model => model.BolumAdi)
                </div>
            </div>

            @*<div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kaydet" class="btn btn-default" />
                </div>
            </div>*@

        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-sm" data-dismiss="modal">
            <i class="ace-icon fa fa-times"></i>
            İptal
        </button>

        <button class="btn btn-sm btn-primary" type="submit">
            <i class="ace-icon fa fa-check"></i>
            Güncelle
        </button>
    </div>
}



        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
