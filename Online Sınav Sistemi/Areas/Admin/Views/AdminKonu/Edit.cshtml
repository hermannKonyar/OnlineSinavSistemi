@using (Html.BeginForm("Edit", "AdminKonu", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="blue bigger">Konu Güncelleme İşlemi</h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.KonuID)

            <div class="form-group">
                @Html.LabelFor(model => model.KonuAdi, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.KonuAdi)
                    @Html.ValidationMessageFor(model => model.KonuAdi)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DersID, "DersID", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("DersID", String.Empty)
                    @Html.ValidationMessageFor(model => model.DersID)
                </div>
            </div>

            @*<div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>*@
        </div>
    </div>
        <div class="modal-footer">
            <button class="btn btn-sm" data-dismiss="modal">
                <i class="ace-icon fa fa-times"></i>
                İptal
            </button>

            <button class="btn btn-sm btn-primary" type="submit">
                <i class="ace-icon fa fa-check"></i>
                Güncelle
            </button>
        </div>
}

