@{
    Layout = null;
}

@using (Html.BeginForm("Edit", "AdminSecenek", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="blue bigger">Secenek Güncelleme İşlemi</h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.SecenekID)

            <div class="form-group">
                @Html.LabelFor(model => model.SoruID, "SoruID", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("SoruID", String.Empty)
                    @Html.ValidationMessageFor(model => model.SoruID)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SecenekAdı, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SecenekAdı)
                    @Html.ValidationMessageFor(model => model.SecenekAdı)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SecenekResmi, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SecenekResmi)
                    @Html.ValidationMessageFor(model => model.SecenekResmi)
                </div>
            </div>

            @*<div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>*@
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-sm" data-dismiss="modal">
            <i class="ace-icon fa fa-times"></i>
            İptal
        </button>

        <button class="btn btn-sm btn-primary" type="submit">
            <i class="ace-icon fa fa-check"></i>
            Güncelle
        </button>
    </div>
}

