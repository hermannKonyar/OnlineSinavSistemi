<script type="text/javascript">
    $(function () {
        // a tagimizde bulunan .view classımıza click olduğunda
        $("body").on("click", ".view", function () {
            //data-target dan url mizi al
            var url = $(this).data("target");
            //bu urlimizi post et
            $.post(url, function (data) { })
                //eğer işlemimiz başarılı bir şekilde gerçekleşirse
            .done(function (data) {
                //gelen datayı .modal-body mizin içerise html olarak ekle
                $("#modelView .modal-body").html(data);
                //sonra da modalimizi göster
                $("#modelView").modal("show");
            })
                //eğer işlem başarısız olursa
            .fail(function () {
                //modalımızın bodysine Error! yaz
                $("#modelView .modal-body").text("Error!!");
                //sonra da modalimizi göster
                $("#modelView").modal("show");
            })

        });
    })

    $(".modalAc").click(function () {
        var soruAdi = $(this).data("soruadi");
        $(".modal-body>p").html(soruAdi + " adlı soru silinsin mi?");
        var id = $(this).data("id");
        $(".soruSil").data("id", id);
        var sinavid = $(this).data("sinavid");
        $(".soruSil").data("sinavid", sinavid);
    });

    $(".soruSil").click(function () {
        var id = $(this).data("id");
        var sinavid = $(this).data("sinavid");

        $.ajax({
            type: "POST",
            url: "/Admin/AdminSoru/Sil/" + id,
            success: function () {
                window.location.replace("/Admin/AdminSoru/Index/" + sinavid);
            },
            error: function () {

            }

        });
    });

    $(".modalAcEdit").click(function () {
        var soruID = $(this).data("id");
        var url = "/Admin/AdminSoru/Edit/" + soruID;

        $("#myModalBodyDiv").load(url, function () {

            ("#modal-form-Edit").modal("show");
        });
    });


</script>